# ATM Machine Simulation

print("Welcome to Python ATM\n")

pin = "1234"
balance = 10000  # Initial balance

# PIN Verification
user_pin = input("Enter your 4-digit ATM PIN: ")
if user_pin != pin:
    print("‚ùå Incorrect PIN. Access Denied!")
else:
    while True:
        print("\n--- MENU ---")
        print("1. Check Balance")
        print("2. Withdraw Money")
        print("3. Deposit Money")
        print("4. Exit")

        choice = input("Enter your choice (1-4): ")

        if choice == "1":
            print(f"‚úÖ Your current balance is ‚Çπ{balance}")
        elif choice == "2":
            amount = int(input("Enter amount to withdraw: "))
            if amount <= balance:
                balance -= amount
                print(f"üí∏ ‚Çπ{amount} withdrawn successfully!")
            else:
                print("‚ö†Ô∏è Insufficient balance.")
        elif choice == "3":
            amount = int(input("Enter amount to deposit: "))
            balance += amount
            print(f"‚úÖ ‚Çπ{amount} deposited successfully!")
        elif choice == "4":
            print("üîí Thank you for using Python ATM. Goodbye!")
            break
        else:
            print("‚ùå Invalid choice. Try again.")
